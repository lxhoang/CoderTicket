<div class="row p1">
  <div class="col-lg-6">
    <%= form_for (@ticket), url: event_tickets_path do |f| %>
    <div class="form-group">
      <%= f.label :ticket_types %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :max_quantity %>
      <%= f.text_field :max_quantity, class:"form-control" %>
    </div>
    <div class="form-group row">
      <%= f.submit "New", class:"btn btn-success" %> |
      <%= link_to "Back",root_path, class:"btn btn-warning" %>
    </div>
    <% end %>
  </div>    
</div>
