<!-- Event(id: integer, starts_at: datetime, ends_at: datetime, venue_id: integer, hero_image_url: string, extended_html_description: text, category_id: integer, name: string, created_at: datetime, updated_at: datetime) -->


<div class="row">
	<br>
	<br>
	<br>
	<div class="col-md-3"></div>
	
	<div class="col-md-6">
	<h1>Create New Events</h1>
	<%= form_for @event do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :image %>
    	<%= f.text_field :hero_image_url, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
    	<%= f.text_area :extended_html_description, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :starts_at %>
		<%= f.datetime_select :starts_at, default: 1.day.from_now,prompt: {day: 'Day', month: 'Month', year: 'Year'}, ampm: true, class: 'form-control', start_year: Time.now.year %>

	</div>

	<div class="form-group">
		<%= f.label :ends_at %>
		<%= f.datetime_select :ends_at,prompt: {day: 'Day', month: 'Month', year: 'Year'}, ampm: true, class: 'form-control',start_year: Time.now.year %>

	</div>

	<div class="form-group">
		<%= f.label :venue %>
		<%= f.select :venue_id, Venue.all.map { |venue| ["#{venue.name} -#{venue.full_address}", venue.id]} %>
	</div>

	<div class="form-group">
		<%= f.label :category %>
		<%= f.select :category_id, Category.all.map { |category| [category.name, category.id] } %>
	</div>

	<%= f.submit "Create Events", class: 'btn btn-danger' %>
	

<% end %>
	</div>
	<div class="col-md-3"></div>

</div>
<div class="row"></div>
<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
	<h1>Your Events</h1>
	<% @my_events.each do |event| %>

		<%= link_to event_path(event) do %>
			<div class="card" style="width: 45rem;">
		  	<img class="card-img-top mw-100" src="<%= event.hero_image_url %>" alt="Card image cap" width="700" height="400">
		  	<div class="card-block">
		    <h4 class="card-title"><%= event.name %></h4>
		    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

		    <%= link_to "View" ,event_path(event), class: 'btn btn-danger' %>

		  </div>
		</div>
		<% end %>

  <% end %>


	</div>


</div>


